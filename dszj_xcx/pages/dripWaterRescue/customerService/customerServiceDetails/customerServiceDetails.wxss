/* 评论框框  start*/
.evaluate{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #F0F0F0;
}
.evaluate_content{
  width: 80%;
  margin-left: 20rpx;
  float: left;
}
.evaluate_content textarea{
  width: 94%;
  height: 60rpx;
  border: 1rpx solid;
  padding-left: 20rpx;
  padding-top: 10rpx;
