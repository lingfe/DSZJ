/* pages/dripWaterRescue/customerService/customerService.wxss */


.page{
  width: 100%;
}
.page_content{
  width: 94%;
  margin: auto;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  height: 150rpx;
  border-bottom: 1rpx solid #D4D4D4;
}
.page_content_left{
  width: 100%;
  float: left;
}
._left{
  width: 70%;
}
.page_content_left_title{
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.page_content_left_label{
  font-size: 28rpx;
  border-radius: 6rpx;
  border: 1rpx solid #E51C23;
  width: 60rpx;
  float: left;
  color: #E51C23;
  margin-right: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.page_content_left_text{
  height: 40rpx;
  line-height:40rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  color: #979797;
  float: left;
  margin-top: 10rpx;
}
.page_content_left_image{
  height: 40rpx;
  float: left;
}
.page_content_left_image image{
  height: 30rpx;
  width: 30rpx;
}
.page_content_right{
  width: 30%;
  float: left;
}
.page_content_right_image{
  width: 100%;
  height: 140rpx;
  padding-bottom: 0rpx;
}
.page_content_right_image image{
  width: 100%;
  margin: auto;
  height: 140rpx;
}

/*发表*/
.thank-letter-icon-float {
    position: absolute;
    right: 10px;
    bottom: 120px;
    cursor: pointer;
    width: 70rpx;
    height: 70rpx;
}
.publish-new-float {
    position: absolute;
    right: 10px;
    bottom: 70px;
    background: #FF9800;
    color: #fff;
    font-size: 14px;
    width: 40px;
    height: 40px;
    line-height: 40px;
    border-radius: 50%;
    text-align: center;
    cursor: pointer;
    user-select: none;
}
