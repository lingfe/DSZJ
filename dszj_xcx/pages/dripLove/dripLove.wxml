                <view class='dripQifu_page_model_content_right_text'>
                  <view class='dripQifu_page_model_content_right_text_text'>
                    目标<span class="dripQifu_page_text-danger">200000.00</span>元
                  </view>
                  <view class='dripQifu_page_model_content_right_text_text'>
                    已筹<span class="dripQifu_page_text-danger">16912.00</span>元
                  </view>
                  <view class='dripQifu_page_model_content_right_text_text dripQifu_page_no-right'>
                    <span class="dripQifu_page_text-danger">735</span> 次支持
                  </view>
                </view>
              </view>
            </view>
            <view class='dripQifu_page_model_title'>
              <view class='dripQifu_page_model_title_image'>
                <image src='/assets/images/dripWaterRescue/Thank.png'></image>
              </view>
              <view class='dripQifu_page_model_title_text'>123******231</view>
              <view class='dripQifu_page_model_title_text dripQifu_page_align_right'>
                <span style="color: #F25B4B;font-weight: 500;">54</span> 人证实
                <span style="color: #fff;background-color: #FA9A0C;width: 40px;height: 14px;line-height: 17px;text-align: center;">
                  已审核
                </span>
              </view>
            </view>
          </view>
      </view>

      <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
        <view class='dripWaterMutualAid_page'>
          <view class='dripWaterMutualAid_page_image'>
            <image src='/assets/images/dripWaterRescue/0.png'></image>
