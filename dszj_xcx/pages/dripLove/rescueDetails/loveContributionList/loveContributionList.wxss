}
.page_ranking{
  width: 100%;
    height: 300rpx;
    background: url(https://www.dishuihuzhu.cn/Public/Images/ranking.png) no-repeat scroll bottom/100rpx ,linear-gradient(to bottom,#0092ff,#74c3ff);
    background-size: 100% 100%;
}
.page_ranking_amount_1{
  width: 22%;
  position: absolute;
  left: 38%;
  top: 10%;
}
.page_ranking_amount_2{
  width: 22%;
