.v-ranking-list {
    height: 100%;
    position: relative;
}
.page_title {
    background: #0092FF;
    color: #fff;
    padding-top: 30rpx;
    padding-bottom: 234rpx;
    display: table;
    width: 100%;
    font-size: 16px;
    text-align: center;
}

/* 前三名  start  */

image{
