@import 'assets/style/weui.wxss';



.weui-uploader__hd {
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  padding-bottom:10px;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}
.weui-uploader__bd {
  margin-bottom:-4px;
  margin-right:-9px;
  overflow:hidden;
}
.weui-uploader__file {
  margin-top:0rpx;
  margin-left:25rpx;
}
.weui-uploader__file {
  float:left;
  margin-right:0px;
  margin-bottom:9px;
}
.img_tt {
  z-index:3;
  position:absolute;
  width:40rpx;
  height:40rpx;
  margin-left:128rpx;
  margin-top:-25rpx;
}
.weui-uploader__img {
  display:block;
  width:79px;
  height:79px;
}
.weui-uploader__input-box {
  margin-left:25rpx;
}
.weui-uploader__input-box {
  float:left;
  position:relative;
  margin-right:0px;
  margin-bottom:9px;
  width:77px;
  height:77px;
  border:1px solid #d9d9d9;
}
.weui-uploader__input {
  position:absolute;
  z-index:1;
  top:0;
  left:0;
  width:100%;
  height:100%;
  opacity:0;
}

.weui-uploader__title {
  margin-left:25rpx;
  margin-top:16rpx;
}
.title {
  font-size:26rpx;
  font-family:"黑体";
}
.weui-uploader__title {
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
}
.weui-uploader__info {
  margin-right:25rpx;
  margin-top:16rpx;
}
.weui-uploader__info {
  color:#b2b2b2;
}